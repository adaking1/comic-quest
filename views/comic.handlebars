<section class="card">
    <h1>{{comic.title}}</h1>
      <img src="/images/{{comic.filename}}" style="max-height: 300px;">
      <p>By, {{comic.writer}}</p>
      <p>Published: {{comic.published_on}}</p>
      <p>{{comic.description}}</p>
</section>

{{#if loggedIn}}
  {{#unless comments}}
    <div class="no-comments">
      <p>No comments are available.</p>
    </div>
  {{/unless}}
  <section id="commentBtns">
      <input data-id="{{comic.id}}" type="text" id="newComment">
      <button data-id="{{comic.id}}" class="btn btn-primary" type="button" id="addComment">Add Comment</button>
  </section>
  {{/if}}
  <div id="commentsCard">
  {{#if loggedIn}}
    {{#each comments as |comment|}}
      <div class="comment" data-commentId="{{comment.id}}">
        <p>{{comment.text}}</p>
        <p>Posted by: {{comment.user.username}}</p>
        {{#if comment.sameUser}}
        <button class="delete-comment-btn" type="submit" data-commentId="{{comment.id}}">Delete Comment</button>
        <button class="updateBtn" type="submit" data-commentId="{{comment.id}}">Update Comment</button>
        {{/if}}
      </div>
    {{/each}}
    {{/if}}
  </div>
{{#unless loggedIn}}
  <div class="login-message">
    <p>You must be logged in to view comments.</p>
  </div>
{{/unless}}

<script src="/js/comment.js"></script>

<script src="/js/deleteComment.js"></script>
<script src="/js/updateComment.js"></script>